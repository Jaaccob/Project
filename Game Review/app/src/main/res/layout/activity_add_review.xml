<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clipToPadding="false"
            android:orientation="vertical"
            android:padding="10dp"
            tools:ignore="MissingConstraints">

            <LinearLayout
                android:id="@+id/linearLayoutTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clipToPadding="false"
                android:orientation="horizontal"
                android:padding="10dp">


                <ImageView
                    android:id="@+id/review_image"
                    android:layout_width="120dp"
                    android:layout_height="120dp" />

                <TextView
                    android:id="@+id/follow_game_title"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="80dp"
                    android:backgroundTint="@color/colorAccentM"
                    android:backgroundTintMode="add"
                    android:text="@string/game_title"
                    android:textColor="@color/colorPrimaryM"
                    android:textSize="30sp"
                    android:textStyle="bold" />


            </LinearLayout>

            <EditText
                android:id="@+id/mark_review"
                android:layout_width="88dp"
                android:layout_height="54dp"
                android:layout_marginStart="35dp"
                android:layout_marginTop="40dp"
                android:backgroundTint="@color/colorAccentM"
                android:hint="Mark"
                android:inputType="numberDecimal" />

            <TextView
                android:id="@+id/error_mark"
                android:layout_width="320dp"
                android:layout_height="25dp"
                android:layout_marginStart="35dp"
                android:backgroundTint="@color/colorAccent" />

            <EditText
                android:id="@+id/description_review"
                android:layout_width="320dp"
                android:layout_height="250dp"
                android:layout_marginStart="35dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/edittext_shadow"
                android:elevation="2dp"
                android:gravity="center_horizontal"
                android:hint="Comment"
                android:inputType="textMultiLine"
                android:singleLine="false" />

            <TextView
                android:id="@+id/error_description"
                android:layout_width="320dp"
                android:layout_height="25dp"
                android:layout_marginStart="35dp"
                android:backgroundTint="@color/colorAccent" />


            <Button
                android:id="@+id/rectangle_1"
                android:layout_width="320dp"
                android:layout_height="50dp"
                android:layout_marginStart="35dp"
                android:layout_marginTop="20dp"
                android:backgroundTint="@color/colorPrimaryM"
                android:onClick="addComment"
                android:text="Comment"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:textStyle="bold" />

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>